{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "server-hub-controller",
    "namespace": "servers",
    "labels": {
      "state": "serving"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "server-hub"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "server-hub"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "server-hub",
            "image": "exorath/server-hub",
            "ports": [
              {
                "containerPort": 25565,
                "protocol": "TCP"
              }
            ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}
